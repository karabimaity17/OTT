<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="@color/black">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_400sdp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_150sdp"
                    android:src="@drawable/movie_poster"
                    android:scaleType="fitXY"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradiant4"/>
            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_80sdp"
                app:cardCornerRadius="@dimen/_10sdp"
                android:layout_margin="@dimen/_8sdp"
                app:cardBackgroundColor="@color/black"
                android:visibility="visible">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_80sdp"
                        android:src="@drawable/background4"
                        android:scaleType="centerCrop"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#000"
                        android:alpha="0.4"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Get exciting Offers with membership!"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:gravity="center_horizontal"
                        android:layout_margin="@dimen/_15sdp"
                        android:textColor="#FFEDD2"/>
                </RelativeLayout>

            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                app:cardBackgroundColor="@color/dark_grey"
                android:layout_marginVertical="@dimen/_minus10sdp"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Saving gets bigger with membership"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:gravity="center_horizontal"
                        android:layout_marginHorizontal="@dimen/_35sdp"
                        android:layout_marginVertical="@dimen/_15sdp"
                        android:textColor="@color/white"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_5sdp"
                android:background="@color/grey"/>
            <LinearLayout
                android:id="@+id/lin_plans"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginVertical="@dimen/_5sdp"
                android:padding="@dimen/_5sdp"
                android:visibility="visible">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:maxLines="2"
                    android:layout_marginVertical="@dimen/_10sdp"
                    android:text="Select the plan which suits your needs"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:typeface="sans"
                    android:visibility="gone"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_10sdp"
                    android:layout_margin="@dimen/_10sdp"
                    app:cardBackgroundColor="@color/black"
                    android:visibility="gone">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="@dimen/_10sdp"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:textSize="12sp"
                                android:text="Benefits"/>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_1sdp"
                                android:background="@color/grey"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_45sdp"
                                android:padding="@dimen/_15sdp"
                                android:textStyle="normal"
                                android:textColor="@color/white"
                                android:textSize="12sp"
                                android:text="All Contents"/>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_1sdp"
                                android:background="@color/grey"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_48sdp"
                                android:padding="@dimen/_10sdp"
                                android:textStyle="normal"
                                android:textColor="@color/white"
                                android:textSize="12sp"
                                android:gravity="center"
                                android:text="Ad free movies &amp; shows"/>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_1sdp"
                                android:background="@color/grey"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_50sdp"
                                android:padding="@dimen/_10sdp"
                                android:textStyle="normal"
                                android:textColor="@color/white"
                                android:textSize="12sp"
                                android:gravity="center"
                                android:text="Max video quality"/>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_1sdp"
                                android:background="@color/grey"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_50sdp"
                                android:textStyle="normal"
                                android:gravity="center"
                                android:textColor="@color/white"
                                android:textSize="12sp"
                                android:text="Max audio quality"/>


                        </LinearLayout>
                        <View
                            android:layout_width="@dimen/_1sdp"
                            android:layout_height="match_parent"
                            android:background="@color/grey"/>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/_10sdp"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:textSize="12sp"
                                android:gravity="center"
                                android:text="Mobile"/>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_1sdp"
                                android:background="#eaebeb"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_45sdp"
                                android:padding="@dimen/_14sdp"
                                android:textStyle="normal"
                                android:textColor="@color/white"
                                android:textSize="14sp"
                                android:gravity="center"
                                android:text="✓"/>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_1sdp"
                                android:background="#eaebeb"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_48sdp"
                                android:padding="@dimen/_15sdp"
                                android:textStyle="normal"
                                android:textColor="@color/white"
                                android:gravity="center"
                                android:textSize="12sp"
                                android:text="✘"/>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_1sdp"
                                android:background="@color/grey" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_50sdp"
                                android:textStyle="normal"
                                android:textColor="@color/white"
                                android:textSize="12sp"
                                android:gravity="center"
                                android:text="HD(720p)"/>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_1sdp"
                                android:background="@color/grey"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_50sdp"
                                android:textStyle="normal"
                                android:gravity="center"
                                android:textColor="@color/white"
                                android:textSize="12sp"
                                android:text="Stereo"/>

                        </LinearLayout>
                        <View
                            android:layout_width="@dimen/_1sdp"
                            android:layout_height="match_parent"
                            android:background="@color/grey"/>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/_10sdp"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:textSize="12sp"
                                android:gravity="center"
                                android:text="Super"/>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_1sdp"
                                android:background="#eaebeb"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_45sdp"
                                android:padding="@dimen/_15sdp"
                                android:textStyle="normal"
                                android:textColor="@color/white"
                                android:textSize="14sp"
                                android:gravity="center"
                                android:text="✓"/>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_1sdp"
                                android:background="#eaebeb"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_48sdp"
                                android:padding="@dimen/_15sdp"
                                android:textStyle="normal"
                                android:textColor="@color/white"
                                android:gravity="center"
                                android:textSize="12sp"
                                android:text="✓"/>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_1sdp"
                                android:background="@color/grey" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_50sdp"
                                android:textStyle="normal"
                                android:textColor="@color/white"
                                android:textSize="12sp"
                                android:gravity="center"
                                android:text="Full HD(1080p)"/>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_1sdp"
                                android:background="@color/grey"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_50sdp"
                                android:textStyle="normal"
                                android:gravity="center"
                                android:textColor="@color/white"
                                android:textSize="12sp"
                                android:text="Dolby 5.1"/>

                        </LinearLayout>
                        <View
                            android:layout_width="@dimen/_1sdp"
                            android:layout_height="match_parent"
                            android:background="@color/grey"/>
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:cardBackgroundColor="@color/black"
                            app:cardCornerRadius="@dimen/_6sdp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/_10sdp"
                                    android:textStyle="bold"
                                    android:textColor="#fff"
                                    android:textSize="12sp"
                                    android:background="@color/colorPrimary"
                                    android:gravity="center"
                                    android:text="Premium"/>
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_1sdp"
                                    android:background="#eaebeb"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_45sdp"
                                    android:padding="@dimen/_15sdp"
                                    android:textStyle="normal"
                                    android:textColor="@color/white"
                                    android:textSize="14sp"
                                    android:background="@color/black"
                                    android:gravity="center"
                                    android:text="✓"/>
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_1sdp"
                                    android:background="#eaebeb"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_48sdp"
                                    android:padding="@dimen/_15sdp"
                                    android:textColor="@color/white"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:gravity="center"
                                    android:text="✓"/>
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_1sdp"
                                    android:background="#eaebeb"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_50sdp"
                                    android:textStyle="bold"
                                    android:textColor="@color/white"
                                    android:textSize="12sp"
                                    android:gravity="center"
                                    android:text="4K (2160p)"/>
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_1sdp"
                                    android:background="@color/grey"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_50sdp"
                                    android:textStyle="normal"
                                    android:gravity="center"
                                    android:textColor="@color/white"
                                    android:textSize="12sp"
                                    android:text="Dolby 5.1"/>

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/recycler_plans"
                    tools:itemCount="3"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/custom_membership"/>
                <Button
                    android:id="@+id/membership_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:text="Continue with Premium Membership >"
                    android:textColor="@color/white"
                    android:padding="@dimen/_10sdp"
                    android:backgroundTint="@color/color1"/>
            </LinearLayout>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>
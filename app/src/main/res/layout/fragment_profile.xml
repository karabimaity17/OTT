<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/black">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
           >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <RelativeLayout
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:orientation="horizontal"
                    android:layout_margin="@dimen/_5sdp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_margin="@dimen/_10sdp"
                        app:cardCornerRadius="@dimen/_25sdp"
                        app:cardBackgroundColor="@color/grey"
                        app:cardElevation="@dimen/_5sdp">

                        <ImageView
                            android:id="@+id/profile_img"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/profile"/>
                    </androidx.cardview.widget.CardView>



                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_img_edit"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="@dimen/_5sdp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="@dimen/_15sdp"
                        app:cardElevation="@dimen/_10sdp"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/edit_btn"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerInside"
                            android:layout_margin="@dimen/_2sdp"
                            android:tint="@color/colorPrimary"
                            android:src="@drawable/edit"
                            />
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:layout_marginHorizontal="@dimen/_5sdp">

                    <TextView
                        android:id="@+id/txt_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="My Account"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_marginBottom="@dimen/_5sdp"/>

                    <TextView
                        android:id="@+id/txt_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No Email"
                        android:textSize="14sp"
                        android:textStyle="normal"
                        android:textColor="@color/white"
                        android:gravity="center"
                        />

                    <TextView
                        android:id="@+id/txt_ph"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No Phone Number"
                        android:textSize="14sp"
                        android:textStyle="normal"
                        android:textColor="@color/white"
                        android:gravity="center"
                        />
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Membership"
        android:textColor="@color/grey"
        android:textStyle="normal"
        android:textAllCaps="true"
        android:layout_margin="@dimen/_10sdp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get More with Premium Membership"
        android:textColor="@color/white"
        android:textStyle="normal"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:layout_marginHorizontal="@dimen/_10sdp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Only â‚¹999/year"
        android:textColor="@color/grey"
        android:textStyle="normal"
        android:textAllCaps="false"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginVertical="@dimen/_5sdp"/>
    <Button
        android:id="@+id/membership_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:text="Get Premium Membership >"
        android:textColor="@color/white"
        android:padding="@dimen/_10sdp"
        android:backgroundTint="@color/color1"/>
 <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Account &amp; Security"
        android:textColor="@color/grey"
        android:textStyle="normal"
        android:textAllCaps="true"
        android:layout_margin="@dimen/_10sdp"/>


    <Button
        android:id="@+id/edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:text="Edit Profile"
        android:textColor="@color/white"
        android:padding="@dimen/_10sdp"
        android:backgroundTint="@color/dark_grey"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:text="Logout"
        android:textColor="@color/white"
        android:padding="@dimen/_10sdp"
        android:backgroundTint="@color/dark_grey"/>



</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".LoginActivity"
android:background="@drawable/img4"
    >
<View
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:alpha="0.7"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Enter the 4 digit OTP"
            android:gravity="center"
            android:textStyle="bold"/>
        <in.aabhasjindal.otptextview.OtpTextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/otpview"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="@dimen/_25sdp"
            android:textColor="@color/white"
            app:bar_active_color="@color/transparent"
            app:bar_error_color="@color/colorAccent"
            app:bar_height="@dimen/_40sdp"
            app:bar_enabled="true"
            app:bar_inactive_color="@color/transparent"
            app:bar_margin_bottom="1dp"
            app:bar_margin_left="2dp"
            app:bar_margin_right="2dp"
            app:bar_success_color="@color/color2"
            app:box_margin="@dimen/_2sdp"
            app:otp_box_background="@drawable/otp_box"
            app:height="@dimen/_40sdp"
            app:hide_otp="false"
            android:layout_centerInParent="true"
            app:length="4"
            app:otp_text_size="20dp"
            app:width="@dimen/_40sdp"
            />
        <TextView
            android:id="@+id/resend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:clickable="true"
            android:text="Didn't get OTP? Resend OTP"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/_10sdp"/>




    </LinearLayout>
    <TextView
        android:id="@+id/verify"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_40sdp"
        android:background="@drawable/btn_background"
        android:layout_gravity="bottom|center_horizontal"
        android:elevation="@dimen/_15sdp"
        android:clickable="true"
        android:text="Verify"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginVertical="@dimen/_50sdp"

        />
</FrameLayout>